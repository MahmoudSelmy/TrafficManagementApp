<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.MainActivity"
    android:orientation="vertical">
    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.SupportMapFragment" />
    <com.github.aakira.expandablelayout.ExpandableRelativeLayout
        android:id="@+id/expandableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:ael_duration="100"
        app:ael_expanded="false"
        app:ael_orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            fbutton:cardBackgroundColor="#616161"
            android:id="@+id/card_view"
            android:layout_alignParentTop="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address : Abbas El-Akkad, Al Manteqah Al Oula, Nasr City, Cairo Governorate, Egypt"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:maxLines="2"
                    android:id="@+id/address"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance : 4.0 km"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:id="@+id/distance"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time : 30min"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:id="@+id/time"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/signal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_view"
            android:layout_centerHorizontal="true"
            >
            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="1dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/view_red"
                        android:padding="2dp"
                        android:background="@android:color/holo_red_dark"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:id="@+id/signalImage"
                    android:src="@drawable/single_traffic"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/signal"
                    android:text="45"
                    android:textSize="30sp"
                    android:layout_gravity="center"
                    android:id="@+id/text_counter" />
            </LinearLayout>
        </LinearLayout>

    </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

    <at.markushi.ui.CircleButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_arrow_back_black_24dp"
        app:cb_color="@color/colorAccent"
        android:layout_below="@+id/expandableLayout"
        android:layout_centerHorizontal="true"
        android:onClick="expandList"
        android:id="@+id/circle_Button"
        />
    <info.hoang8f.widget.FButton
        fbutton:buttonColor="@color/colorPrimary"
        fbutton:shadowColor="@color/colorPrimaryDark"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="1dp"
        android:onClick="pickLocation"
        android:textColor="#FFFFFF"
        android:layout_margin="10dp"
        fbutton:cornerRadius="5dp"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:text="@string/yalla"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:id="@+id/FButton" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:id="@+id/layoutGone"
        android:translationZ="2dp"
        android:alpha="0.7"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="30dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageOFF"
                android:src="@mipmap/ic_location_off_white_48dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enable_gps"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                android:layout_below="@id/imageOFF"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>